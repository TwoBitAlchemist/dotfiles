# reset colors
nocolor="\[\033[0m\]"

# foreground colors
red="\[\033[0;31m\]"
green="\[\033[0;32m\]"
yellow="\[\033[0;33m\]"
blue="\[\033[0;34m\]"
magenta="\[\033[0;35m\]"
cyan="\[\033[0;36m\]"
gray="\[\033[0;37m\]"
black="\[\033[1;30m\]"
brightred="\[\033[1;31m\]"
brightgreen="\[\033[1;32m\]"
brightyellow="\[\033[1;33m\]"
brightblue="\[\033[1;34m\]"
brightmagenta="\033[1;35m\]"
brightcyan="\[\033[1;36m\]"
brightwhite="\[\033[1;37m\]"

# background colors
bgred="\[\033[0;41m\]"
bggreen="\[\033[0;42m\]"
bgyellow="\[\033[0;43m\]"
bgblue="\[\033[0;44m\]"
bgmagenta="\[\033[0;45m\]"
bgcyan="\[\033[0;46m\]"
bggray="\[\033[0;47m\]"
boldbgred="\[\033[1;41m\]"
boldbggreen="\[\033[1;42m\]"
boldbgyellow="\[\033[1;43m\]"
boldbgblue="\[\033[1;44m\]"
boldbgmagenta="\[\033[1;45m\]"
boldbgcyan="\[\033[1;46m\]"
boldbggray="\[\033[1;47m\]"

show-ansi-color-vars() {
    for color in red green yellow blue magenta cyan black white gray;
    do
        echo -e ${!color} $color $nocolor;
        brightcolor=bright$color
        [[ -z ${!brightcolor} ]] || echo -e ${!brightcolor} $brightcolor;
        bgcolor=bg$color
        [[ -z ${!bgcolor} ]] || echo -e ${!bgcolor} $bgcolor $nocolor;
        boldbg=boldbg$color
        [[ -z ${!boldbg} ]] || echo -e ${!boldbg} $boldbg $nocolor;
        echo -e $nocolor ---------------;
    done;
}
