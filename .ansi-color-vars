# reset colors
nocolor="\e[0m"

# foreground colors
red="\e[0;31m"
green="\e[0;32m"
yellow="\e[0;33m"
blue="\e[0;34m"
magenta="\e[0;35m"
cyan="\e[0;36m"
gray="\e[0;37m"
black="\e[1;30m"
brightred="\e[1;31m"
brightgreen="\e[1;32m"
brightyellow="\e[1;33m"
brightblue="\e[1;34m"
brightmagenta="\e[1;35m"
brightcyan="\e[1;36m"
brightwhite="\e[1;37m"

# background colors
bgred="\e[0;41m"
bggreen="\e[0;42m"
bgyellow="\e[0;43m"
bgblue="\e[0;44m"
bgmagenta="\e[0;45m"
bgcyan="\e[0;46m"
bggray="\e[0;47m"
boldbgred="\e[1;41m"
boldbggreen="\e[1;42m"
boldbgyellow="\e[1;43m"
boldbgblue="\e[1;44m"
boldbgmagenta="\e[1;45m"
boldbgcyan="\e[1;46m"
boldbggray="\e[1;47m"

show-ansi-color-vars() {
    for color in red green yellow blue magenta cyan black white gray;
    do
        echo -e ${!color} $color $nocolor;
        brightcolor=bright$color
        [[ -z ${!brightcolor} ]] || echo -e ${!brightcolor} $brightcolor;
        bgcolor=bg$color
        [[ -z ${!bgcolor} ]] || echo -e ${!bgcolor} $bgcolor $nocolor;
        boldbg=boldbg$color
        [[ -z ${!boldbg} ]] || echo -e ${!boldbg} $boldbg $nocolor;
        echo -e $nocolor ---------------;
    done;
}
